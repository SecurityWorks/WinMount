<Application
    x:Class="WinMount.App.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WinMount.App"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <muxc:XamlControlsResources Version="WinUI_2dot5"/>
            </ResourceDictionary.MergedDictionaries>
            <!-- NOTE: Remember to modify them all at once! -->
            <x:Double x:Key="AppTitleBarHeight">40</x:Double>
            <Thickness x:Key="AppTitleBarTopThickness">0,40,0,0</Thickness>
        </ResourceDictionary>
    </Application.Resources>
</Application>
